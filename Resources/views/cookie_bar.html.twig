<div id="js-ff-cookie-bar" class="ff-cookie_bar" style="background-color: {{ getDesign('bg_color') }}; color: {{ getDesign('text_color') }}">
    {# Header #}
    <div class="ff-cookie_bar_header">
        <p>{{ 'Cookie_bar_title'|trans(domain = 'GdprBundle') }}</p>
    </div>

    {# Body #}
    <div class="ff-cookie_bar_body">
        <p>
            {{ 'Cookie_bar_message'|trans(domain = 'GdprBundle') }}
        </p>
        <p>
            <a href="{{ path('fluffy_gdpr') }}" class="ff-cookie_bar_link">{{ 'See_more'|trans(domain = 'GdprBundle') }}</a>
            <a href="{{ path('fluffy_gdpr', {'_fragment': 'params'}) }}" class="ff-cookie_bar_link">{{ 'Set_cookies'|trans(domain = 'GdprBundle') }}</a>
        </p>
    </div>

    {# Footer #}
    <div class="ff-cookie_bar_footer">
        <a href="" id="js-ff-cookies-deny" class="ff-cookie_bar_btn deny"
           style="background-color: {{ getDesign('btn_deny_bg_color') }}; color: {{ getDesign('btn_deny_text_color') }}">
            {{ 'Deny_cookies'|trans(domain = 'GdprBundle') }}
        </a>
        <a href="" id="js-ff-cookies-allow" class="ff-cookie_bar_btn allow"
           style="background-color: {{ getDesign('btn_allow_bg_color') }}; color: {{ getDesign('btn_allow_text_color') }}">
            {{ 'Accept_cookies'|trans(domain = 'GdprBundle') }}
        </a>
    </div>
</div>
